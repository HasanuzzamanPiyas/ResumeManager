@model ResumeManager.Model.Applicant

@{
    ViewData["Title"] = "Create";
}
<style>
img {
  border-radius: 50%;
}
</style>
<style>

.avatar{
    vertical-align : middle;

    border-radius: 50%;



 font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;

}

#ExpTable td, #ExpTable th {
  border: 1px solid #ddd;
  padding: 8px;
}

#ExpTable tr:nth-child(even){background-color: #f2f2f2;}

#ExpTable tr:hover {background-color: #ddd;}

#ExpTable th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;

}
</style>
<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header  text-uppercase" style="height:45px; background-color: #04AA6D;">
            <h4>View Applicant</h4>
        </div>
        <form ID="ApplicantForm" enctype="multipart/form-data" asp-action="Create" >
            <dev class="row">
                 <div class="col-md-12 ">
                     <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label" ></label>
                        <input asp-for="Name" class="form-control-plaintext" readonly />
                       
                    </div>
                </div>
                <div class="btn-group" style="position: absolute;top: -5px;">
                   <img  alt="Avatar" src="~/Images/@Model.PhotoUrl" class="img-fluid"  
                    width="125" height="125" style="border:1px;margin-left:850px;margin-top:10px;"/>
                </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group" style="padding: 15px;">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group" style="padding: 15px;">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6" >
                    <div class="form-group" style="padding: 15px;">
                        <label asp-for="Qualification" class="control-label"></label>
                         <input asp-for="Qualification" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group" style="padding: 15px;">
                        <label asp-for="TotalExprience" class="control-label"></label>
                         <input asp-for="TotalExprience" class="form-control-plaintext" readonly />
                    </div>
                </div>

               

                <div class="col-md-12">
                    <table id="ExpTable" class="table table-striped table-sm">
                        <thade>
                            <tr>
                                <th>
                                    CompanyName
                                </th>
                                <th>
                                    Designation
                                </th>
                                <th>
                                    YearsWork
                                </th>

                                <th></th>
                            </tr>
                        </thade>
                        <tbody>
                            @for (int i = 0; i < Model.Expriences.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="@Model.Expriences[i].CompanyName"class="form-control-plaintext" readonly  />
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Expriences[i].Designation" class="form-control-plaintext" readonly  />
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Expriences[i].YearWorked" class="form-control-plaintext" readonly  />

                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <input type="hidden" id="hdnLastIndex" value="0" />


                <div class="col-12">
                    <div class="col-6 form-group text-right p-2">
                        <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                    </div>
                </div>
        </form>

    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}