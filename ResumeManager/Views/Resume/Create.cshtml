@model ResumeManager.Model.Applicant

@{
    ViewData["Title"] = "Create";
}
<style>

    .avatar {
        vertical-align: middle;
        border-radius: 50%;
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
    }

    #ExpTable td, #ExpTable th {
        border: 1px solid #ddd;
        padding: 8px;
    }

    #ExpTable tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    #ExpTable tr:hover {
        background-color: #ddd;
    }

    #ExpTable th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #04AA6D;
        color: white;
    }


    .a {
        color: #E7484F
    }

    .b {
        color: #F68B1D
    }

    .c {
        color: #FCED00
    }

    .d {
        color: #009E4F
    }

    .e {
        color: #00AAC3
    }

    .f {
        color: #732982
    }



    .text-center {
       position: relative;
       left: 32%;

    }

    .rainbow {
        background-color: #04AA6D;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        padding: 8px 16px;
    }

    .rainbow-1:hover {
        background-image: linear-gradient(90deg, #00C0FF 0%, #FFCF00 49%, #FC4F4F 80%, #00C0FF 100%);
        animation: slidebg 5s linear infinite;
    }

    .rainbow-2:hover {
        background-image: linear-gradient(to right, red, orange, yellow, green, blue, indigo, violet, red);
        animation: slidebg 2s linear infinite;
    }

    .rainbow-3:hover {
        background-image: linear-gradient(to right, red, orange, yellow, green, blue, indigo, red);
        animation: slidebg 2s linear infinite;
    }

    .rainbow-4:hover {
        background-image: linear-gradient( to right, #E7484F, #F68B1D, #FCED00, #009E4F, #00AAC3, #732982 );
        animation: slidebg 2s linear infinite;
    }


    .rainbow-5:hover {
        background-image: linear-gradient( to right, #E7484F, #E7484F 16.65%, #F68B1D 16.65%, #F68B1D 33.3%, #FCED00 33.3%, #FCED00 49.95%, #009E4F 49.95%, #009E4F 66.6%, #00AAC3 66.6%, #00AAC3 83.25%, #732982 83.25%, #732982 100%, #E7484F 100% );
        animation: slidebg 2s linear infinite;
    }


    .follow {
        margin-top: 40px;
    }

        .follow a {
            color: black;
            padding: 8px 16px;
            text-decoration: none;
        }

</style>


<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header  text-uppercase" style="height:45px; background-color: #04AA6D;">
            <h4>Create Applicant</h4>
        </div>
        <form ID="ApplicantForm" enctype="multipart/form-data" asp-action="Create">
            <div class="container-fluid btn-group">
                <div class="col-8">

                    <dev class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Gender" class="control-label"></label>
                                <select asp-for="Gender" class="form-control" asp-items="ViewBag.Gender"></select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Age" class="control-label"></label>
                                <input asp-for="Age" class="form-control" />
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Qualification" class="control-label"></label>
                                <input asp-for="Qualification" class="form-control" />
                                <span asp-validation-for="Qualification" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TotalExprience" class="control-label"></label>
                                <input asp-for="TotalExprience" class="form-control form-control-plaintext" id="TotalExperience" readonly />

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ProfilePhoto" class="control-label"></label>
                                <div class="custom-file">
                                    <input asp-for="ProfilePhoto" class="cutom-file-input" id="customFile"
                                           onchange="document.getElementById('PreviewPhoto').src = window.URL.createObjectURL(this.files[0])" />
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                                <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                            </div>
                        </div>

                </div>
                <div class="col-4">
                    <div class="form-group col-12 justify-content-center align-middle">
                        <img id="PreviewPhoto" src="~/Images/paris.jpg.jpg" class="avatar" alt="Logo Image"
                             width="200" height="200" style="border:1px; margin-top:20px;" />
                    </div>
                </div>
            </div>

            <div class="container col-12">

                <div class="col-md-12 p-0 m-0 bg-light">
                    <table id="ExpTable" class="table table-sm CodesTable">
                        <thade>
                            <tr>
                                <th>
                                    CompanyName
                                </th>
                                <th>
                                    Designation
                                </th>
                                <th>
                                    YearsWork
                                </th>
                                <th>
                                    <div class="container text-center">

                                        <a id="btnaddExperience" class="rainbow rainbow-1 btn btn-sm visible " onclick="AddItem(this)" style="font-weight: 700;font-size: 15px;position: relative;left: 10px;top: -3px;" > ADD <a />

                                    </div>
                                </th>

                                @*  <th style="width:54px;">
                                    <button id="btnaddExperience" style="border-radius: 5%;" type="button" class="btn btn-sm visible"
                                    onclick="AddItem(this)">
                                    Add
                                    </button>
                                    </th>*@
                            </tr>
                        </thade>
                        <tbody>
                            @for (int i = 0; i < Model.Expriences.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="@Model.Expriences[i].CompanyName" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Expriences[i].Designation" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.Expriences[i].IsDeleted" />
                                        <input asp-for="@Model.Expriences[i].YearWorked" class="form-control YearsWorked" />
                                        <span asp-validation-for="@Model.Expriences[i].YearWorked" class="text-danger"></span>
                                    </td>

                                    <td style="width:60px;">

                                        <button id="btnremove-@i" type="button" class="btn btn-sm btn- btn-danger visible"
                                            onclick="DeleteItem(this)" ;">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <input type="hidden" id="hdnLastIndex" value="0" />


                <div class="col-12 btn-group">
                    <div class="col-6 form-group text-right p-2">
                        <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                    </div>
                    <div class="col-6 form-group text-left p-2">
                        <input type="submit" value="Cerate" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}